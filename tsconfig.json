{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    }
}